#! /bin/bash -e
pkg="$1"
if [[ -z "$pkg" ]]; then
    echo "Usage: $0 <package>"
    exit 1
fi

(cd $pkg; ./gen-package.sh)
PKG=$(ls -tr packages | tail -1)
echo ""
echo "*** Installing $PKG on ${SG_HOST:=sg-eth}"
scp packages/$PKG gnome@$SG_HOST:
ssh gnome@$SG_HOST sudo apt install --reinstall ./$PKG
